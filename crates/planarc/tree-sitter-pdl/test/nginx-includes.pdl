import std.fs 

query includePattern = `
(directive
    (keyword) @kw
    (#eq? @kw "include")
    [(file) (mask)] @path
)
`

edge Includes = File -> File

node IncludeDirective {

    match includePattern {

        let files = resolve_glob @path.text

        emit File { path: context.current_file.path } -[Includes]-> files 
        
    }
}