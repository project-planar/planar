{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Planardl",
  "scopeName": "source.pdl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#attributes" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.planardl",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
          {
            "comment": "Управляющие инструкции (Control Flow)",
            "name": "keyword.control.pdl",
            "match": "\\b(match|global)\\b"
          },
          {
            "comment": "Декларации (Declarations / Storage)",
            "name": "storage.type.pdl",
            "match": "\\b(type|node|fact|extern|import|query|schema|it)\\b"
          },
          {
            "comment": "Другие специфичные ключевые слова",
            "name": "keyword.other.pdl",
            "match": "\\b(operator|grammar|in)\\b"
          }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.planardl",
          "begin": "\"",
          "end": "\"",
          "patterns": [{ "match": "\\\\.", "name": "constant.character.escape.planardl" }]
        },
        {
          "name": "string.quoted.backtick.planardl",
          "begin": "`",
          "end": "`",
          "comment": "Raw strings and query literals"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.name.tag.attribute.planardl",
          "match": "#[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.planardl",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "variable.language.special.planardl",
          "match": "\\$CURRENT_FILE"
        },
        {
          "name": "variable.other.capture.planardl",
          "match": "@[a-zA-Z_][a-zA-Z0-9_.]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.planardl",
          "match": "->|::|\\||\\.\\.|="
        },
        {
          "name": "keyword.operator.arithmetic.planardl",
          "match": "\\/"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "comment": "Types starting with Uppercase",
          "name": "entity.name.type.planardl",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "comment": "Dotted FQMN (Fully Qualified Module Names)",
          "match": "\\b([a-z][a-z0-9_]*\\.)+[a-zA-Z0-9_]+\\b",
          "name": "entity.name.section.planardl"
        },
        {
          "name": "keyword.other.unit.planardl",
          "match": "\\b(Int|String|Diagnostic|List)\\b"
        }
      ]
    }
  }
}